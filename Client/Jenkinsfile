pipeline {
//where to execute
  
   agent any
//where the 'work' happends
  tools {nodejs "nodejs"}
   stages {
      stage('installing') {
         steps {
            echo 'installing node modules...'
           sh "npm install"
         }
      }
     
     stage('test') {
         steps {
            echo 'testing application'
         }
      }
     
     stage('deploy') {
         steps {
            echo 'deploy application'
         }
      }
   }
}

