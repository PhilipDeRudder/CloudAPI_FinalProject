pipeline {
//where to execute
  

   agent any
  environment {
    PATH='/usr/local/bin:/usr/bin:/bin'
  }
  tools {nodejs "node"}
//where the 'work' happends

   stages {
      stage('installing') {
         steps {
            echo 'installing node modules...'
            sh 'npm install'
           
         }
      }
     
     stage('build') {
         steps {
            echo 'testing application'
           sh 'npm run build --prod'
         }
      }
     
     stage('Test') {
         steps {
            echo 'Test application'
           
         }
      }
   }
}

