pipeline {
//where to execute
  
   agent any
//where the 'work' happends

   stages {
      stage('installing') {
         steps {
            echo 'installing node modules...'
           
         }
      }
     
     stage('build') {
         steps {
            echo 'testing application'
           sh 'ng serve'
         }
      }
     
     stage('deploy') {
         steps {
            echo 'deploy application'
         }
      }
   }
}

